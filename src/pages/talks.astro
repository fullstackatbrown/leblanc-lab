---
import Talks from '../components/Talk.jsx';
import NavBar from '../components/NavBar.jsx';
import fs from 'fs';
import bibtexParse from 'bibtex-parse-js';

const bibtexData = fs.readFileSync('./public/talks.bib', 'utf8');
const parsedData = bibtexParse.toJSON(bibtexData);
---

<html>
  <head>
  <meta name="viewport" content="width=device-width, initial-scale=1.0", charset="UTF-8"/>
    <title>Talks</title>
  </head>
  <body>
    <NavBar client:load currentPage = "talks"/>
    <div>
      <Talks talks={parsedData} />
    </div>
  </body>
</html>